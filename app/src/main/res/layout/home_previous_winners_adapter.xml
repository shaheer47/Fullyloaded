<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_120sdp"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:id="@+id/MainRelativeLayout">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/PreviousWinnerImage"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:src="@drawable/previous_winners"
        android:layout_centerHorizontal="true"/>

    <com.app.fullyloaded.Utility.MyTextView
        android:id="@+id/txtPreviousWinnerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/PreviousWinnerImage"
        android:text="Jhon Donga"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/black"
        app:semi_bold="true"
        android:singleLine="true"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/_5sdp"/>

    <com.app.fullyloaded.Utility.MyTextView
        android:id="@+id/txtPreviousWinningDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@id/txtPreviousWinnerName"
        android:text="10-01-2020"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/dark_grey"
        app:medium="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp"/>

</RelativeLayout>