<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/square_corner_border"
    android:id="@+id/MainRelativeLayout">

    <ImageView
        android:id="@+id/CurrentCompetitionsImage"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/app_logo"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_5sdp"/>

    <com.app.fullyloaded.Utility.MyTextView
        android:id="@+id/txtCategoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/CurrentCompetitionsImage"
        android:text=""
        android:textSize="@dimen/_13sdp"
        android:textColor="@color/black"
        app:medium="true"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/_5sdp"
        android:gravity="center"/>

    <com.app.fullyloaded.Utility.MyTextView
        android:id="@+id/txtParticipate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtCategoryName"
        android:textSize="@dimen/_12sdp"
        android:text="Participate"
        android:textColor="@color/white"
        app:medium="true"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:background="@drawable/rounded_corner_border"
        android:backgroundTint="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_5sdp"/>

</RelativeLayout>