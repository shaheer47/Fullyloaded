<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/MainRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_2sdp"
    android:background="@drawable/rounded_corner_border"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/PreviousWinnerImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:layout_margin="@dimen/_2sdp"
        android:scaleType="fitCenter"
        android:src="@drawable/previous_winners" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/PreviousWinnerImage"
        android:gravity="center"
        android:orientation="vertical">

        <com.app.fullyloaded.Utility.MyTextView
            android:id="@+id/txtPreviousWinnerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/_5sdp"
            android:text="Jhon Donga"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            app:semi_bold="true" />

        <com.app.fullyloaded.Utility.MyTextView
            android:id="@+id/txtPreviousWinningDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-10dp"
            android:text="10-01-2020"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/_14sdp"
            android:visibility="gone"
            app:medium="true" />

        <com.app.fullyloaded.Utility.MyTextView
            android:id="@+id/txtPreviousWinningDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_weight="3"
            android:text="Lorem Ipsum has been the industryâ€™s standard dummy text ever since the 1500s, when an unknown printer took a galley of type."
            android:textAlignment="center"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/_12sdp"
            app:regular="true" />
    </LinearLayout>

</RelativeLayout>