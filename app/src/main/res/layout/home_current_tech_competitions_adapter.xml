<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/MainRelativeLayout"
    android:layout_height="wrap_content"
    android:layout_width="@dimen/_150sdp"
    android:gravity="center"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/square_corner_border"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/CurrentCompetitionsProductImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_margin="@dimen/_2sdp"
        android:scaleType="fitCenter"
        android:src="@drawable/bmw"/>

    <com.app.fullyloaded.Utility.MyTextView
        android:id="@+id/txtCurrentCompetitionsProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/CurrentCompetitionsProductImage"
        android:gravity="center"
        android:text="Sample Product"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/_5sdp"
        app:medium="true"/>

    <LinearLayout
        android:id="@+id/CurrentCompetitionsProductNameLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtCurrentCompetitionsProductName"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <com.app.fullyloaded.Utility.MyTextView
            android:id="@+id/txtCurrentCompetitionsProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="£2.25"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_11ssp"
            app:semi_bold="true"/>

        <com.app.fullyloaded.Utility.MyTextView
            android:id="@+id/txtCurrentCompetitionsSalePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="£2.25"
            android:textColor="@color/bt_error_red"
            android:textSize="@dimen/_11ssp"
            app:bold="true"/>

        <com.app.fullyloaded.Utility.MyTextView
            android:id="@+id/txtCategoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:gravity="center"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:text="Tech"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corner_border_colorprimary"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_8sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            app:semi_bold="true"/>

    </LinearLayout>

    <com.app.fullyloaded.Utility.MyTextView
        android:id="@+id/txtParticipate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/CurrentCompetitionsProductNameLinearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp"
        android:background="@drawable/rounded_corner_border"
        android:paddingBottom="@dimen/_5sdp"
        android:backgroundTint="@color/colorPrimary"
        android:gravity="center"
        android:paddingTop="@dimen/_5sdp"
        android:text="Participate"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        app:medium="true"/>

</RelativeLayout>